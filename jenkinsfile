pipeline {
    agent any

    tools {
        nodejs 'nodejs'
    }

    environment {
        AWS_REGION = "ap-south-1"
        S3_BUCKET = "home-haven"   // <-- your S3 bucket name
    }

    stages {

        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/Roshani-Bhangale-026/home-haven-india-77ba70a0.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }

        stage('Build React App') {
            steps {
                sh 'npm run build'
            }
        }

        stage('Deploy to S3') {
            steps {
                withAWS(credentials: 'aws-creds', region: "${AWS_REGION}") {
                    sh """
                        aws s3 sync build/ s3://${S3_BUCKET}/ --delete
                    """
                }
            }
        }
    }
}
